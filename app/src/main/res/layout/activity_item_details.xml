<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="5dp">

        <!--Price-->
        <RelativeLayout
            android:id="@+id/layout_item_detail_car_price"
            android:layout_width="wrap_content"
            android:layout_marginRight="80dp"
            android:layout_marginTop="17dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textItemDetailCarPrice"
                android:textStyle="bold"
                android:textColor="@color/pb_blue_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
        </RelativeLayout>

    </RelativeLayout>


    <com.carmudi.exam.customview.ImageSwitcher
        android:id="@+id/imgSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_weight="0.6">

    </com.carmudi.exam.customview.ImageSwitcher>
    <ScrollView
        android:id="@+id/ll_scroll_asset_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textItemDetailCarName"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llLocation"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/grey_500"
                    android:background="@drawable/ic_my_location" />

                <TextView
                    android:id="@+id/tvItemDetailCarLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llItemDetailContactPersonName"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/grey_500"
                    android:background="@drawable/ic_person" />

                <TextView
                    android:id="@+id/tvItemDetailContactPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llItemDetailContactPersonEmail"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/grey_500"
                    android:src="@android:drawable/ic_dialog_email" />

                <TextView
                    android:id="@+id/tvItemDetailContactPersonEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llItemDetailContactPersonMobileNum"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/grey_500"
                    android:src="@drawable/ic_phonelink_ring_white_24dp" />

                <TextView
                    android:id="@+id/tvItemDetailContactPersonMobileNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llItemDetailContactPersonHomePhoneNum"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/grey_500"
                    android:src="@android:drawable/stat_sys_phone_call" />

                <TextView
                    android:id="@+id/tvItemDetailContactPersonHomePhoneNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llSerialNum"
                android:orientation="horizontal">

                <!--<ImageView-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:tint="@color/grey_500"-->
                    <!--android:background="@drawable/ic_barcode_scanner_grey600_24dp" />-->

                <TextView
                    android:id="@+id/textDeviceSerial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lltags_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">


                <!--<ImageView-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:src="@drawable/ic_action_tags" />-->

                <LinearLayout
                    android:id="@+id/glTags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="vertical"></LinearLayout>

            </LinearLayout>

            <!--If there are report-->
            <LinearLayout
                android:id="@+id/ll_report_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <!--<ImageView-->
                    <!--android:id="@+id/img_report_details"-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:padding="3dp"-->
                    <!--android:tint="@color/grey_500"-->
                    <!--android:src="@drawable/ic_mode_comment_grey600_24dp" />-->

                <GridLayout
                    android:id="@+id/reports_container"
                    android:columnCount="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


            </LinearLayout>

            <TextView
                android:id="@+id/txtVwSeeMoreComments"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="See more comments"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

